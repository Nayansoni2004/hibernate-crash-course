<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration SYSTEM "hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>
	
	<session-factory>
	
		<!-- database configurations -->
		
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_crash_course</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">1234</property>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		
		
		<!-- hibernate configurations -->
		
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property> <!-- update mtlv agar nhi bani h table to create hogi warna nhi hogi -->
		
		
		<!-- XML/class mappings  -->
		
		<!-- <mapping resource="" /> -->
		<mapping class="com.lcwd.hiber.hibernate_crash_course.entities.Student" />
		<!-- <mapping class="com.lcwd.hiber.hibernate_crash_course.entities.Certificate" /> -->
		
		
	</session-factory>
	
</hibernate-configuration>